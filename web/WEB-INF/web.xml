<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>FoodController</servlet-name>
        <servlet-class>com.fptuni.prj301.F_foods.Controller.FoodController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.fptuni.prj301.F_foods.Controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailController</servlet-name>
        <servlet-class>com.fptuni.prj301.F_foods.Controller.DetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccessController</servlet-name>
        <servlet-class>com.fptuni.prj301.F_foods.Controller.AccessController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>com.fptuni.prj301.F_foods.Controller.CheckoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.fptuni.prj301.F_foods.Controller.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FoodController</servlet-name>
        <url-pattern>/Food/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/Home/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailController</servlet-name>
        <url-pattern>/Detail/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccessController</servlet-name>
        <url-pattern>/Access/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/Checkout/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/Management/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
